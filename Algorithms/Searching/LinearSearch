public class LinearSearch {

    public static void main(String[] args) {

        int[] arr = {20, 30, 50, 35, 40};
        int val = 35;
        System.out.println(linearSearch(arr, val));
    }

    private static int linearSearch(int[] arr, int val) {
        int n = arr.length;
        for(int i = 0; i < n; i++){
            if(arr[i] == val){
                return i;
            }
        }

        return -1;
    }


}
